<%= form_with(model: @category, local: true) do |f| %>
  <div class="input-group my-3">
    <%= f.text_field :name, class: "form-control", placeholder: "Category name" %>
    <%= f.submit(@category.new_record? ? "Create" : "Update", class: "btn btn-outline-primary mr-2") %>
    <%= link_to "Cancel", :back, class: "btn btn-outline-secondary" %>
  </div>
<% end %>