<h1>Category: <%= @category.name %></h1>

<% if logged_in? %>
  <div class="pt-4">
    <%= link_to "Edit category", edit_category_path(@category), class:"btn btn-outline-primary" %>
    <% if already_subscribed?(@category) %>
      <%= link_to 'Unsubscribe', category_subscription_path(@category), method: :delete, 
                              class: "btn btn-danger" %>
    <% else %>
      <%= link_to 'Subscribe', category_subscriptions_path(@category), method: :post, 
                              class: "btn btn-warning" %>
    <% end %>
  </div>
<% end %>

<%# displaying the category questions by rendering page questions and sent to it the @category.questions parameter (see show method in categories_controller) %>
<%= render 'questions/question' %>

