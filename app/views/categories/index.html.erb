<h1>Categories</h1>

<% if logged_in? %>
  <%= link_to 'New category', new_category_path, class:"btn btn-outline-primary" %>
<% end %>

<% @categories.each do |category| %>
  <div class="pt-3">
    <div class="card text-center">
      <div class="card-body mt-2">
        <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
        <%= pluralize(category.questions.count, "question") %>
      </div>
    </div>
  </div>
<% end %>

