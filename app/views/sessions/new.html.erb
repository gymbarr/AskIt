<h1 class="pb-3">Sign in</h1>

<%= form_with url: session_path do |f| %>
  <div class="mb-3">
    <%= f.email_field :email, required: true, placeholder: "Email", class:"form-control form-control-lg" %>
  </div>
  <div class="mb-3">
    <%= f.password_field :password, required: true, placeholder: "Password", class:"form-control form-control-lg" %>
  </div>

  <%= f.submit "Sign in", class:"btn btn-outline-primary btn-lg" %>
<% end %>