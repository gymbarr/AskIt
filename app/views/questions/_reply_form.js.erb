var answer_boxes = document.getElementsByClassName('answer-form');
var comment_boxes = document.getElementsByClassName('comment-form');

for (let answer_box of answer_boxes) {
  answer_box.setAttribute('style', 'display: none;');
}

for (let comment_box of comment_boxes) {
  comment_box.setAttribute('style', 'display: none;');
}

<% if new_reply %>
  document.getElementById('reply_form_<%= repliable.id %>').setAttribute('style', 'display: block;');
  formEle = document.getElementById("reply_area_<%= repliable.id %>");
<% else %>
  document.getElementById('edit_form_<%= repliable.id %>').setAttribute('style', 'display: block;');
  formEle = document.getElementById("edit_area_<%= repliable.id %>");
<% end %>

formEle.focus();
length = formEle.value.length;
formEle.setSelectionRange(length, length);