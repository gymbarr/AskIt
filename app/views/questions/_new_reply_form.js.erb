<% replies.each do |reply| %>
  <% if obj == reply %>
    document.querySelector('#new_reply_form_<%= reply.id %>').innerHTML = 
      '<%= escape_javascript(render 'questions/reply_form.html', { answer: @answer, reply: @comment }) %>'
  <% else %>
    document.querySelector('#new_reply_form_<%= reply.id %>').innerHTML = ''
  <% end %>
<% end %>

document.getElementById("new_comment_area").focus()
