var boxes = document.getElementsByClassName('comment-form');

for (let box of boxes) {
  box.setAttribute('style', 'display: none;');
}

<% if new_reply %>
  document.getElementById('reply_form_<%= repliable.id %>').setAttribute('style', 'display: block;');
  document.getElementById("reply_area_<%= repliable.id %>").focus()
<% else %>
  document.getElementById('edit_form_<%= repliable.id %>').setAttribute('style', 'display: block;');
  document.getElementById("edit_area_<%= repliable.id %>").focus()
<% end %>
