<%# displaying comment for answers %>
<div class="row">
  <div class="col-1">
  </div>
  <div class="col-11">
    <div class="card mt-2" id="reply-<%= comment.id %>">
      <div class="card-body">
        <h6 class="card-title"><%= comment.user.username %></h6>
        <p class="card-text"><%= comment.body %></p>
        <p class="card-text"><small class="text-muted"><%= format_timestamp(comment.created_at) %></small></p>

        <%= link_to t('global.button.reply'),
                    new_reply_path(repliable_id: comment),
                    remote: true, class:"btn btn-outline-primary btn-sm" %>
        <% if owner?(comment) %>
          <%= link_to t('global.button.edit'), 
                      edit_reply_path(comment, repliable_id: comment), 
                      remote: true, class:"btn btn-outline-primary btn-sm" %>
          <%= link_to t('global.button.delete'), reply_path(comment), method: :delete, 
                      data: { confirm: t('global.dialog.you_sure') }, class:"btn btn-outline-danger btn-sm" %>
        <% end %>

        <div class="comment-form" id="reply_form_<%= comment.id %>">
          <%= render 'questions/reply_form.html', { reply: comment.comments.build } %>
        </div>

        <div class="comment-form" id="edit_form_<%= comment.id %>">
          <%= render 'questions/reply_form.html', { reply: comment } %>
        </div>
      </div>
    </div>
  </div>
</div>