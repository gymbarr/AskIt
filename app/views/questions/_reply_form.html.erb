<%= form_with model: [@question, reply] do |f| %>
  <div class="input-group my-3">
    <% if reply.class == Answer %>
      <% if reply.new_record? %>
        <%= f.text_area :body, required: true, 
                        placeholder: t('questions.show.leave_answer'), class:"form-control" %>
      <% else %>
        <%= f.text_area :body, required: true, 
                      placeholder: t('questions.show.leave_answer'), class:"form-control", id: "edit_answer_area" %>
      <% end %>
    <% end %>

      <% if reply.class == Comment %>
        <% if reply.new_record? %>
          <%= f.text_area :body, required: true, 
                          placeholder: t('questions.show.leave_comment'), class:"form-control", id: "new_comment_area" %> 
        <% else %>
          <%= f.text_area :body, required: true, 
                          placeholder: t('questions.show.leave_comment'), class:"form-control", id: "edit_comment_area" %> 
        <% end %>
      <% end %>       

    <%= hidden_field_tag :answer_id, answer&.id %>
    <%= f.submit reply.new_record? ? t('global.button.enter') : t('global.button.update'),
                 class:"btn btn-outline-primary" %>
  </div>
<% end %>