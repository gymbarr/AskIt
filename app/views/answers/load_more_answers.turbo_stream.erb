<%= turbo_stream.append "replies" do %>
  <% @replies.each do |reply| %>
    <% if reply.is_a?(Answer) %>
      <%= render 'answers/answer', { answer: reply } %>
    <% else %>
      <%= render 'comments/comment', { comment: reply } %>
    <% end %>
  <% end %>
<% end %>

<%= turbo_stream.update "load_more_answers_button" do %>
  <% if @pagy.next.present? %>
    <%= button_to "Load more", load_more_answers_path(question_id: @question.id, page: @pagy.next), class:"btn btn-outline-primary" %>
  <% end %>
<% end %>